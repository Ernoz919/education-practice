<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:screenOrientation="portrait"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".views.Language">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/language"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            style="@style/RegisterLoginTitle"
            android:text="Language"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/english"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="English"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Hi"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Yes"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Not"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-How are you?"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/brazil"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="Portuguese"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Oi"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Sim"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Não"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Tudo bem?"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/france"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="French"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Salut"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Oui"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Pas"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-D'accord?"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/german"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="German"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Hallo"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Ja"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Nicht"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-In Ordnung?"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/spanish"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="Spanish"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-¡Hola"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Sí"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-No"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-¿Todo bien?"/>

    </LinearLayout>

</ScrollView>
