<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jv_jo.educationpratice.Science">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/science"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            style="@style/RegisterLoginTitle"
            android:text="Science"/>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/physical"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="Physical"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:id="@+id/physical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical"/>

        <LinearLayout
            android:layout_marginTop="17dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chemistry"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="Chemistry"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:id="@+id/chemistry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chemistry"/>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/astronomy"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="Astronomy"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:id="@+id/astronomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Astronomy"/>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/biology"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/topic"
                android:layout_gravity="center_vertical"
                android:text="Biology"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:id="@+id/biology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biology"/>

    </LinearLayout>
</ScrollView>
